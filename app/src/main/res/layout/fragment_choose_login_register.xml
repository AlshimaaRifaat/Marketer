<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    android:id="@+id/chooseLoginRegisterContainer"
    tools:context=".ui.ChooseLoginRegister.ChooseLoginRegisterFragment">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mask_group1">
    <TextView
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:background="@drawable/colored_textview_circle"
        android:textColor="@color/colorWhite"
        android:text="@string/Arabic"
        android:gravity="center"
        />
   <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="@dimen/_170sdp"
        android:layout_height="@dimen/_90sdp"
        android:layout_marginTop="@dimen/_135sdp"
        android:src="@drawable/group4853"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_5sdp"
     app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintGuide_percent="0.73"/>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="@dimen/_157sdp"
        android:layout_height="@dimen/_32sdp"
        android:layout_marginStart="@dimen/_27sdp"
        android:layout_marginEnd="@dimen/_27sdp"
        android:background="@drawable/btn_continue"
        android:text="@string/SIGN_IN"
        android:textSize="@dimen/_10ssp"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/_20sdp"
        android:fontFamily="@font/montserrat_regular"
        android:layout_marginBottom="@dimen/_50sdp"
        />
    <Button
        android:id="@+id/btnCreateNewAccount"
        android:layout_width="@dimen/_157sdp"
        android:layout_height="@dimen/_32sdp"
        android:background="@drawable/btn_create_new_account"
        android:text="@string/CREATE_A_NEW_ACCOUNT"
        android:textSize="@dimen/_10ssp"
        android:textColor="@color/colorRed"
        app:layout_constraintTop_toBottomOf="@id/btnLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/montserrat_regular"
        />
</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>