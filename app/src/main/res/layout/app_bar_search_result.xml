<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintToolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <ImageView
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_18sdp"
                    android:src="@drawable/backwardarrow"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/label"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_30sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/logo"
                    android:fontFamily="@font/montserrat_regular"
                    app:layout_constraintStart_toEndOf="@+id/back"
                    app:layout_constraintTop_toTopOf="parent" />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraniSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/label"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:layout_marginEnd="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/et_search_corner"
                    >
                    <ImageView
                        android:id="@+id/icSearch"
                        android:layout_width="@dimen/_14sdp"
                        android:layout_height="@dimen/_14sdp"
                        android:src="@drawable/group57"
                        android:layout_marginStart="@dimen/_12sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <EditText
                        android:id="@+id/etSearch"
                        android:layout_width="@dimen/_225sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginStart="@dimen/_2sdp"
                        app:layout_constraintStart_toEndOf="@+id/icSearch"
                        android:height="@dimen/_70sdp"
                        android:background="@color/colorGrey00"
                        android:gravity="center"
                        android:ems="10"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="@font/montserrat_regular"
                        android:hint="@string/search"
                        android:textColor="@color/colorGrey07"
                        android:inputType="textPersonName"
                        android:paddingStart="@dimen/_12sdp"
                        android:textColorHint="@color/colorGrey07"
                        app:layout_constraintTop_toTopOf="parent"
                        />
                    <ImageView
                        android:id="@+id/imgGoSearchResult"
                        android:layout_width="@dimen/_43sdp"
                        android:layout_height="@dimen/_35sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:background="@drawable/rectangle_17572"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginEnd="@dimen/_17sdp"
                        android:gravity="center"
                        android:textColor="@color/colorWhite"
                        android:text="@string/GO"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <View
                    android:id="@+id/lineSearch"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/colorGrey01"
                    android:layout_marginTop="@dimen/_12sdp"
                    app:layout_constraintTop_toBottomOf="@id/constraniSearch"
                    />
                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_27sdp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    app:layout_constraintTop_toBottomOf="@+id/lineSearch"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.502"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintVertical_bias="0.498"
                    android:backgroundTint="@color/colorRed"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintFilter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/lineSearch">
                    <TextView
                        android:id="@+id/tFilter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:text="@string/Filter"
                        android:textColor="@color/colorGrey09"
                        android:textSize="@dimen/_9ssp"
                        android:fontFamily="@font/montserrat_regular"
                        android:layout_marginEnd="@dimen/_13sdp"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toStartOf="@+id/tFilter"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginEnd="@dimen/_7sdp"
                        android:background="@drawable/filter"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <ImageView
                    android:id="@+id/icGrid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toStartOf="@+id/constraintFilter"
                    app:layout_constraintTop_toBottomOf="@id/lineSearch"
                    android:layout_marginEnd="@dimen/_7sdp"
                    android:background="@drawable/grid_shape"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toStartOf="@+id/icGrid"
                    app:layout_constraintTop_toBottomOf="@id/lineSearch"
                    android:layout_marginEnd="@dimen/_7sdp"
                    android:background="@drawable/linear_shape"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <View
        android:id="@+id/viewAppBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/colorGrey01"
        app:layout_constraintTop_toBottomOf="@id/appbar"
        />
    <Button
        android:id="@+id/btnByLocation"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_20sdp"
        android:background="@drawable/btn_continue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewAppBar"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:textSize="@dimen/_9sdp"
        android:text="@string/By_location"
        android:textAllCaps="false"
        android:layout_marginTop="@dimen/_9sdp"
        android:layout_marginStart="@dimen/_9sdp"
        />
    <Button
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_20sdp"
        android:background="@drawable/btn_bags_corner"
        app:layout_constraintStart_toEndOf="@+id/btnByLocation"
        app:layout_constraintTop_toBottomOf="@+id/viewAppBar"
        android:textColor="@color/colorGrey07"
        android:gravity="center"
        android:textSize="@dimen/_9sdp"
        android:text="@string/Alphabetical"
        android:textAllCaps="false"
        android:layout_marginTop="@dimen/_9sdp"
        android:layout_marginStart="@dimen/_9sdp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSearchResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnByLocation"
        app:spanCount="2"
        tools:listitem="@layout/row_wish_list" />
</androidx.constraintlayout.widget.ConstraintLayout>