    <LinearLayout
      android:id="@+id/linearLayout"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_1sdp"
        android:layout_marginStart="@dimen/_22sdp"
        android:layout_marginEnd="@dimen/_22sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewAppBar">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_11sdp"
        android:layout_marginStart="@dimen/_1sdp"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center"
        android:text="@string/Name"
        android:textColor="@color/colorGrey09"
        android:textSize="@dimen/_10ssp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/_22sdp"
        android:fontFamily="@font/montserrat_regular"
        android:inputType="textPersonName"
        android:paddingTop="@dimen/_2sdp"
        android:hint="Shimaa Refaat"
        android:textColor="@color/colorGrey09"
        android:textSize="@dimen/_9ssp"
        android:textStyle="bold" />
    <!-- ==================================== -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_11sdp"
        android:layout_marginStart="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_13sdp"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center"
        android:text="@string/Card_number"
        android:textColor="@color/colorGrey09"
        android:textSize="@dimen/_10ssp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/_22sdp"
        android:fontFamily="@font/montserrat_regular"
        android:inputType="number"
        android:paddingTop="@dimen/_2sdp"
        android:text=" 34 ** **** 2451 3524"
        android:textColor="@color/colorGrey09"
        android:textSize="@dimen/_10ssp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <!-- ==================================== -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_11sdp"
                android:layout_marginStart="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_11sdp"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center"
                android:text="@string/ExpireDate"
                android:textColor="@color/colorGrey09"
                android:textSize="@dimen/_10ssp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_34sdp"
                android:fontFamily="@font/montserrat_regular"
                android:inputType="date"
                android:paddingTop="@dimen/_2sdp"
                android:text="08 / 22"
                android:textColor="@color/colorGrey09"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <!-- ==================================== -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_11sdp"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center"
                android:text="CVV"
                android:textColor="@color/colorGrey09"
                android:textSize="12sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_34sdp"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="end"
                android:inputType="textPassword"
                android:paddingTop="@dimen/_2sdp"
                android:text="123"
                android:textColor="@color/colorGrey09"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
    </LinearLayout>

    <RadioButton
        android:id="@+id/rBtnCash"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/_8sdp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/_15sdp"
        app:layout_constraintTop_toBottomOf="@id/linearLayout"
        android:text="@string/Cash" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintShipmentAddress"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25sdp"
        android:background="@color/colorGrey02"
        android:layout_marginTop="@dimen/_9sdp"
        app:layout_constraintTop_toBottomOf="@id/rBtnCash"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_22sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="center"
            android:text="@string/ShipmentAddress"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_10ssp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/ChooceCity"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_12sdp"
        android:layout_marginStart="@dimen/_22sdp"
        android:fontFamily="@font/montserrat_regular"
        android:layout_marginTop="@dimen/_12sdp"
        app:layout_constraintTop_toBottomOf="@+id/constraintShipmentAddress"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/ChooseCity"
        android:textColor="@color/colorGrey09"
        android:textSize="@dimen/_10sdp"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_22sdp"
        android:layout_marginEnd="@dimen/_22sdp"
        android:id="@+id/constraint_spinnner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ChooceCity"
        android:orientation="horizontal"
        >

        <Spinner
            android:id="@+id/genderSpinner"
            android:layout_width="@dimen/_240sdp"
            android:layout_height="0dp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@+id/dddd"
            android:background="#FFF"
            android:gravity="center|start"
            android:textColor="#ffff"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/dddd"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@+id/dddd"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="8dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/next2"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/Street"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_11sdp"
        android:layout_marginStart="@dimen/_22sdp"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center"
        android:text="@string/Street"
        android:textColor="@color/colorGrey09"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintTop_toBottomOf="@+id/constraint_spinnner"/>

    <EditText
        android:id="@+id/etStreet"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_22sdp"
        android:fontFamily="@font/montserrat_regular"
        android:layout_marginStart="@dimen/_22sdp"
        android:layout_marginEnd="@dimen/_22sdp"
        android:inputType="number"
        android:paddingTop="@dimen/_2sdp"
        app:layout_constraintTop_toBottomOf="@+id/Street"
        android:text="Abd elhai street"
        android:textColor="@color/colorGrey09"
        android:textSize="@dimen/_10ssp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/Building"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_11sdp"
        android:layout_marginTop="@dimen/_9sdp"
        android:layout_marginStart="@dimen/_22sdp"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center"
        android:text="@string/Building"
        android:textColor="@color/colorGrey09"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintTop_toBottomOf="@+id/etStreet"/>

    <EditText
        android:id="@+id/etBuilding"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_22sdp"
        android:fontFamily="@font/montserrat_regular"
        android:layout_marginStart="@dimen/_22sdp"
        android:layout_marginEnd="@dimen/_22sdp"
        android:inputType="number"
        android:paddingTop="@dimen/_2sdp"
        app:layout_constraintTop_toBottomOf="@+id/Building"
        android:text="4"
        android:textColor="@color/colorGrey09"
        android:textSize="@dimen/_10ssp"
        android:textStyle="bold" />
    <Spinner
        android:id="@+id/spCode"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_30sdp"
       android:layout_marginTop="@dimen/_9sdp"
        android:layout_marginStart="@dimen/_22sdp"
        android:textSize="@dimen/_10ssp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etBuilding"/>
    <EditText
        android:id="@+id/etPhone"
        android:layout_width="@dimen/_180sdp"
        android:layout_height="@dimen/_22sdp"
        android:fontFamily="@font/montserrat_regular"
        android:layout_marginStart="@dimen/_22sdp"
        android:layout_marginTop="@dimen/_14sdp"
        android:layout_marginEnd="@dimen/_22sdp"
        app:layout_constraintStart_toEndOf="@+id/spCode"
        android:inputType="number"
        android:paddingTop="@dimen/_2sdp"
        app:layout_constraintTop_toBottomOf="@+id/etBuilding"
        android:hint="@string/MobileNumber"
        android:textColor="@color/colorGrey09"
        android:textSize="@dimen/_10ssp"
        android:textStyle="bold" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintTop_toBottomOf="@id/etPhone"
        android:background="@color/colorRed"
        android:layout_marginTop="@dimen/_11ssp"
        android:text="@string/DONE"
        android:textAllCaps="true"
        android:textColor="@color/colorWhite"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>