<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.MyShoppingCart.MyShoppingCartFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintToolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_18sdp"
                android:src="@drawable/backwardarrow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/My_shopping_cart"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/back"
                android:fontFamily="@font/montserrat_regular"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <View
        android:id="@+id/viewAppBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/colorGrey01"
        app:layout_constraintTop_toBottomOf="@id/appbar"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMyShoppingCart"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@+id/viewAppBar"
        android:layout_marginBottom="@dimen/_4sdp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        tools:listitem="@layout/row_my_shopping_cart"

        ></androidx.recyclerview.widget.RecyclerView>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@id/rvMyShoppingCart"
       app:layout_constraintGuide_percent="0.6"/>
    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        app:layout_constraintTop_toBottomOf="@id/guideline"
        android:background="@color/colorGrey02"
        android:layout_marginTop="@dimen/_10sdp"
        />
    <TextView
        android:id="@+id/ADDCopon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_13sdp"
        android:layout_marginTop="@dimen/_13sdp"
        android:text="@string/ADDCopon"
        android:textSize="@dimen/_13sdp"
        android:textColor="@color/colorBlack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line1"
        android:fontFamily="@font/montserrat_regular"/>
    <EditText
        android:id="@+id/tCamera"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_80sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:textColor="@color/colorGrey09"
        android:background="@drawable/et_add_copon"
        android:textSize="@dimen/_13sdp"
        app:layout_constraintStart_toEndOf="@id/ADDCopon"
        app:layout_constraintTop_toBottomOf="@id/line1"
        />
    <View
        android:id="@+id/lineAddCopon"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/colorGrey02"
        android:layout_marginTop="@dimen/_13sdp"
        app:layout_constraintTop_toBottomOf="@id/ADDCopon"
        />

    <TextView
        android:id="@+id/Shipping_fee"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_13sdp"
        android:layout_marginTop="@dimen/_9sdp"
        android:text="@string/Shipping_fee"
        android:textSize="@dimen/_13sdp"
        android:textColor="@color/colorGrey09"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/montserrat_regular"
        app:layout_constraintTop_toBottomOf="@+id/lineAddCopon" />
    <TextView
        android:id="@+id/tShippingFee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_110sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:text="16.9$"
        android:textColor="@color/colorGrey09"
        android:textSize="@dimen/_13sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/Shipping_fee"
        app:layout_constraintTop_toBottomOf="@id/lineAddCopon"
        android:fontFamily="@font/montserrat_regular"
        />
    <TextView
        android:id="@+id/Sub_total"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_13sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:text="@string/Sub_total"
        android:textSize="@dimen/_13sdp"
        android:textColor="@color/colorGrey09"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/montserrat_regular"
        app:layout_constraintTop_toBottomOf="@+id/Shipping_fee" />
    <TextView
        android:id="@+id/tSubTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_110sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:text="12.9$"
        android:textColor="@color/colorGrey09"
        android:textSize="@dimen/_13sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/Shipping_fee"
        app:layout_constraintTop_toBottomOf="@id/tShippingFee"
        android:fontFamily="@font/montserrat_regular"
        />
    <TextView
        android:id="@+id/Total"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_13sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:text="@string/Total"
        android:textSize="@dimen/_13sdp"
        android:textColor="@color/colorBlack"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/montserrat_regular"
        app:layout_constraintTop_toBottomOf="@+id/Sub_total" />
    <TextView
        android:id="@+id/tTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_110sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:text="12.9$"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_13sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/Shipping_fee"
        app:layout_constraintTop_toBottomOf="@id/tSubTotal"
        android:fontFamily="@font/montserrat_regular"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/colorRed"
        android:layout_marginTop="@dimen/_11ssp"
        android:text="@string/CheckOut"
        android:textAllCaps="true"
        android:textColor="@color/colorWhite"
        app:layout_constraintTop_toBottomOf="@id/Total"
        android:fontFamily="@font/montserrat_regular"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>