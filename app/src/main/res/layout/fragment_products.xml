<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/productsContainer"
    android:background="@color/colorWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.TopMarketersDetails.Products.ProductsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/constraintProducType"
        >
        <Button
            android:id="@+id/btnMainDishesProduct"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:text="Clothes"
            android:textColor="@color/colorWhite"
            android:textAllCaps="false"
            android:drawablePadding="@dimen/_2sdp"
            android:textSize="@dimen/_8sdp"
            android:background="@drawable/btn_continue"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/montserrat_regular"/>
        <Button
            android:id="@+id/btnDessert"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_22sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:text="Bags"
            android:textColor="@color/colorGrey07"
            android:textAllCaps="false"
            android:drawablePadding="@dimen/_2sdp"
            android:textSize="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_4sdp"
            android:background="@drawable/btn_bags_corner"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:fontFamily="@font/montserrat_regular"
            app:layout_constraintStart_toEndOf="@id/btnMainDishesProduct" />
        <Button
            android:id="@+id/btnSnaks"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_22sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:text="Shoes"
            android:textColor="@color/colorGrey07"
            android:textAllCaps="false"
            android:drawablePadding="@dimen/_2sdp"
            android:textSize="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_4sdp"
            android:background="@drawable/btn_bags_corner"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:fontFamily="@font/montserrat_regular"
            app:layout_constraintStart_toEndOf="@id/btnDessert" />
        <Button
            android:id="@+id/btnDrinks"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_22sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:text="Hats"
            android:textColor="@color/colorGrey07"
            android:textAllCaps="false"
            android:drawablePadding="@dimen/_2sdp"
            android:textSize="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_4sdp"
            android:background="@drawable/btn_bags_corner"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:fontFamily="@font/montserrat_regular"
            app:layout_constraintStart_toEndOf="@id/btnSnaks" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvProducts"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_250sdp"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@+id/constraintProducType"
        android:layout_marginBottom="@dimen/_4sdp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        tools:listitem="@layout/row_full_day_offer"
        ></androidx.recyclerview.widget.RecyclerView>
</androidx.constraintlayout.widget.ConstraintLayout>