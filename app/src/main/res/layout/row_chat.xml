<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="5dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgProfile"
        android:layout_width="@dimen/_44sdp"
        android:layout_height="@dimen/_44sdp"
        android:layout_gravity="top|right"
        android:background="@drawable/no_path_copy"
        android:layout_marginStart="@dimen/_8sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
       />
    <TextView
        android:id="@+id/tTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Today at 5:32 PM"
        android:textColor="@color/colorGrey07"
        android:textSize="@dimen/_9ssp"
        android:fontFamily="@font/montserrat_regular"
        android:layout_marginStart="@dimen/_10sdp"
        app:layout_constraintStart_toEndOf="@id/imgProfile"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tChatStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="based on your status"
        android:textColor="@color/colorGrey07"
        android:textSize="@dimen/_9ssp"
        android:fontFamily="@font/montserrat_regular"
        android:layout_marginStart="@dimen/_13sdp"
        app:layout_constraintStart_toEndOf="@id/tTime"
        app:layout_constraintTop_toTopOf="parent" />
   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="@dimen/_115sdp"
       app:layout_constraintStart_toEndOf="@id/imgProfile"
       app:layout_constraintTop_toBottomOf="@id/tTime"
       android:layout_marginStart="@dimen/_60sdp"
       android:background="@drawable/rectangle_c"
       android:layout_marginEnd="@dimen/_60sdp"
       android:layout_marginTop="@dimen/_4sdp">
    <TextView
        android:id="@+id/tMainDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/colorBlack"
        android:layout_margin="@dimen/_9sdp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Lorem ispum color labla bla fghj dfghj ertg dfghj fghd"
        />
       <androidx.cardview.widget.CardView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:layout_constraintTop_toBottomOf="@id/tMainDesc"
           app:layout_constraintStart_toStartOf="parent"
           android:layout_marginStart="@dimen/_10sdp"
           android:layout_marginTop="@dimen/_9sdp"
           app:cardCornerRadius="@dimen/_12sdp"
           android:id="@+id/card_img">
       <ImageView
           android:id="@+id/imgMainDishes"
           android:layout_width="@dimen/_37sdp"
           android:layout_height="@dimen/_37sdp"
           app:layout_constraintStart_toStartOf="parent"
           android:background="@drawable/rectangle_d"
           app:layout_constraintTop_toBottomOf="@id/line"
           />
       </androidx.cardview.widget.CardView>
       <TextView
           android:id="@+id/tShortDesc"
           android:layout_width="@dimen/_100sdp"
           android:layout_height="wrap_content"
           app:layout_constraintStart_toEndOf="@id/card_img"
           app:layout_constraintTop_toBottomOf="@id/tMainDesc"
           android:textColor="@color/colorGrey09"
           android:layout_marginStart="@dimen/_7sdp"
           android:layout_marginEnd="@dimen/_9sdp"
           android:layout_marginTop="@dimen/_14sdp"
           android:textSize="@dimen/_9sdp"
           android:fontFamily="@font/montserrat_regular"
           android:text="Lorem ispum color labla bla fghj dfghj ertg dfghj fghd"
           />

       <ImageView
           android:id="@+id/ic_arrow_right"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/_22sdp"
           app:srcCompat="@drawable/ic_arrow_right"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toEndOf="@id/tShortDesc"
           app:layout_constraintTop_toBottomOf="@id/tMainDesc"/>



       <Button
           android:id="@+id/btnAccept"
           android:layout_width="wrap_content"
           android:layout_height="@dimen/_25sdp"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintBottom_toBottomOf="parent"
           android:background="@drawable/rectangle17666"
           android:textColor="@color/colorWhite"
           android:layout_marginTop="@dimen/_5sdp"
           android:text="@string/Accept"
           android:fontFamily="@font/montserrat_regular"
           />
   </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>