<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_260sdp"
    android:layout_height="@dimen/_80sdp"
    android:layout_margin="@dimen/_2sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    android:background="@drawable/product_item_corner"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tReviewerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:textColor="@color/colorRed"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/montserrat_regular"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/tReviewerName"
        android:layout_marginEnd="@dimen/_20sdp"
        android:textSize="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:fontFamily="@font/montserrat_regular"
        android:layout_marginTop="@dimen/_18sdp"
        />
    <RatingBar
        android:id="@+id/rating_bar_evaluate"
        android:layout_marginEnd="@dimen/_13sdp"
        android:transformPivotX="@dimen/_109sdp"
        android:transformPivotY="@dimen/_12sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_18sdp"
        android:stepSize="1.0"
        android:numStars="5"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:progressTint="@color/colorRed"
        android:progressBackgroundTint="@color/colorGrey07"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/tStarNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/rating_bar_evaluate"
        android:layout_marginEnd="@dimen/_2sdp"
        android:textSize="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_18sdp"
        android:fontFamily="@font/montserrat_regular"
        />
    <TextView
        android:id="@+id/tReviewerDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_13sdp"
        android:layout_marginEnd="@dimen/_13sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_11sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tReviewerName" />

</androidx.constraintlayout.widget.ConstraintLayout>