<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_77sdp"
    android:background="@color/colorWhite"

    xmlns:app="http://schemas.android.com/apk/res-auto">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgProfile"
            android:layout_width="@dimen/_44sdp"
            android:layout_height="@dimen/_44sdp"
            android:layout_gravity="top|right"
            android:background="@drawable/no_path_copy"
            android:layout_marginStart="@dimen/_20sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


<View
    android:id="@+id/lineImg"
    android:layout_width="@dimen/_2sdp"
    android:layout_height="@dimen/_45sdp"
    app:layout_constraintStart_toEndOf="@id/imgProfile"
    android:layout_marginStart="@dimen/_5sdp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:background="@color/colorGrey02"

    />


    <TextView
        android:id="@+id/tName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_14sdp"
        android:text="Max"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintStart_toEndOf="@+id/lineImg"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/montserrat_bold"/>
    <TextView
        android:id="@+id/tTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 hours ago"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/_20sdp"
        android:textSize="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_14sdp"
        android:fontFamily="@font/montserrat_regular"
        />

    <TextView
        android:id="@+id/tDesc"
        android:layout_width="@dimen/_190sdp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:text="lorem espirimsdfghjkl fghjk derfgthj erty defrg fgh"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintStart_toEndOf="@+id/lineImg"
        app:layout_constraintTop_toBottomOf="@+id/tName"
        android:fontFamily="@font/montserrat_regular"/>

    <ImageView
        android:id="@+id/icArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
       android:text="Today 4:12pm"
        android:layout_marginEnd="@dimen/_20sdp"
        android:src="@drawable/group_4817"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_11sdp"
        app:layout_constraintBottom_toBottomOf="parent"

        />

