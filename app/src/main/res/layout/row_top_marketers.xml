<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/_8sdp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_Img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/product_item_corner">
        <ImageView
            android:id="@+id/img_TopMarketer"
            android:layout_width="@dimen/_105sdp"
            android:layout_height="@dimen/_65sdp"
            android:background="@drawable/img_item_corner"
            android:layout_margin="@dimen/_5sdp"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/t_TopMarketerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Max Store"
        android:textSize="@dimen/_11ssp"
        android:textColor="@color/colorGrey07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@id/constraint_Img"
        android:fontFamily="@font/montserrat_regular"/>

</androidx.constraintlayout.widget.ConstraintLayout>