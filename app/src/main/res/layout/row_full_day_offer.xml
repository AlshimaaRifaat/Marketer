<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:app1="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    app1:layout_constraintStart_toStartOf="parent"
    app1:layout_constraintTop_toTopOf="parent"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_94sdp"
    android:layout_margin="@dimen/_5sdp"
    android:background="@drawable/product_item_corner">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintMainImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/_9sdp"
        >
        <ImageView
            android:id="@+id/imgOfferProduct"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_90sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/kfc"
            />
        <View
            android:layout_width="@dimen/_2sdp"
            android:layout_height="wrap_content"
            android:background="@color/colorGrey02"
            android:layout_marginStart="@dimen/_5sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgOfferProduct"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/tProductType"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_14sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:text="Clothes"
        android:textColor="@color/colorWhite"
        android:textAllCaps="false"
        android:layout_marginTop="@dimen/_9sdp"
       android:layout_marginStart="@dimen/_10sdp"
       android:gravity="center"
        android:textSize="@dimen/_7sdp"
        android:fontFamily="@font/montserrat_regular"
        android:background="@drawable/btn_product_type"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/constraintMainImg"
       />
    <ImageView
        android:id="@+id/imgSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/icons3"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        />
    <TextView
        android:id="@+id/tDesc"
        android:layout_height="wrap_content"
        android:layout_width="@dimen/_120sdp"
        android:text="Men's Modern Fit Th Fiex stretch  "
        android:textColor="@color/colorGrey07"
        app:layout_constraintTop_toBottomOf="@id/tProductType"
        app:layout_constraintStart_toEndOf="@id/constraintMainImg"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="@dimen/_9ssp"
        />
    <TextView
        android:id="@+id/tSoldBy"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Sold by Zara"
        android:textColor="@color/colorGrey07"
        app:layout_constraintTop_toBottomOf="@id/tDesc"
        app:layout_constraintStart_toEndOf="@id/constraintMainImg"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:textSize="@dimen/_9ssp"
        android:fontFamily="@font/montserrat_regular"
        />
    <TextView
        android:id="@+id/tRateNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(4.0)"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:textSize="@dimen/_9ssp"
        app:layout_constraintTop_toBottomOf="@+id/tSoldBy"
        android:layout_marginEnd="@dimen/_2sdp"
        app:layout_constraintStart_toEndOf="@id/constraintMainImg"
        android:fontFamily="@font/montserrat_regular"
        />
    <RatingBar
        android:id="@+id/rating_bar_evaluate"
        android:layout_marginEnd="@dimen/_13sdp"
        android:transformPivotX="@dimen/_109sdp"
        android:transformPivotY="@dimen/_12sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:stepSize="1.0"
        android:numStars="5"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:progressTint="@color/colorRed"
        android:progressBackgroundTint="@color/colorGrey07"
        app:layout_constraintStart_toEndOf="@+id/tRateNumber"
        app:layout_constraintTop_toBottomOf="@id/tSoldBy"
        android:layout_marginStart="@dimen/_4sdp"
        />



    <TextView
        android:id="@+id/tProductPrice"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="210 QAR"
        android:textColor="@color/colorBlack"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="@dimen/_10ssp"
        android:layout_marginBottom="@dimen/_9sdp"
        android:fontFamily="@font/montserrat_regular"
        />


